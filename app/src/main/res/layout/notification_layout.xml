<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue_300"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/city_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"
        android:text="City"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/temp_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"
        android:text="27C"
        android:textSize="30dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/city_notification"/>

    <TextView
        android:id="@+id/feels_like_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"
        android:textSize="16dp"
        android:text="Feels like"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/temp_notification"/>

    <ImageView
        android:id="@+id/image_notification"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_02d_few_clouds"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/description_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"
        android:textSize="16dp"
        android:text="Description"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/image_notification"/>

</RelativeLayout>